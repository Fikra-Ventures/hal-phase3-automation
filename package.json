{
  "name": "hal-phase3-automation",
  "version": "1.0.0",
  "description": "HAL Phase 3 Automated Execution System - Complete 42 micro-tasks by October 1, 2025",
  "main": "automation/automation-engine.js",
  "scripts": {
    "start": "node automation/task-scheduler.js",
    "start-automation": "node automation/automation-engine.js",
    "monitor": "node monitoring/dashboard.js",
    "setup": "./scripts/provision-infrastructure.sh",
    "setup-secrets": "./scripts/setup-secrets.sh",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint automation/ monitoring/ scripts/",
    "dev": "nodemon automation/automation-engine.js",
    "build": "echo 'No build step required'",
    "deploy": "npm run setup && npm run start-automation",
    "health-check": "curl -s http://localhost:3000/health || echo 'Dashboard not running'",
    "logs": "tail -f logs/*.log",
    "clean": "rm -rf logs/* reports/* node_modules/.cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fikra-hal/hal-phase3-automation.git"
  },
  "keywords": [
    "automation",
    "hal",
    "phase3", 
    "task-management",
    "ci-cd",
    "monitoring",
    "slack-integration",
    "openai",
    "memory-management",
    "guardrails",
    "safety",
    "performance"
  ],
  "author": "HAL <hal@fikra.ventures>",
  "license": "MIT",
  "dependencies": {
    "@slack/webhook": "^7.0.2",
    "airtable": "^0.12.2",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "automation/**/*.js",
      "monitoring/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "config": {
    "phase": 3,
    "targetDate": "2025-10-01",
    "totalTasks": 42,
    "totalDays": 18,
    "automationSchedule": "0 4 * * *",
    "timezone": "GST"
  }
}
